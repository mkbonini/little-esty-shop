<h1>Create Bulk Discount</h1>

<% flash.each do |type, msg| %>
    <div class='flash_red'><%= msg %></div>
    <br>
<% end %>

<%= form_with url: merchant_discounts_path(@merchant), method: :post, local: true do |f| %>
    <%= f.label :quantity, "Threshold Quantity: " %>
    <%= f.text_field :quantity %>

    <%= f.label :discount, "Discount Percentage: " %>
    <%= f.text_field :discount %>

    <%= f.submit 'Create Bulk Discount' %>
<% end %>
